# Set path to point to Homebrew before standard paths
export PATH=/usr/local/bin:/usr/local/sbin:~/bin:$PATH

# Add Android paths
export PATH=~/Code/SDKs/android-sdk-macosx/platforms:$PATH
export PATH=~/Code/SDKs/android-sdk-macosx/tools:$PATH
export PATH=~/Code/SDKs/android-sdk-macosx/platform-tools:$PATH

# Add Sencha paths
export PATH=~/Code/SDKs/SenchaSDKTools-2.0.0-beta3:$PATH

# Add RVM to PATH for scripting
export PATH=$PATH:$HOME/.rvm/bin

# Add RealVNC paths
export PATH=$PATH:$HOME/Code/WorkProjects/builds:$PATH
export PATH=$PATH:$HOME/Code/WorkProjects/tools:$PATH
