#!/bin/sh

echo "\033[1;37mScanning for git repositories..."
for dir in $(find . -name '.git' -type d | grep -v ".build" | sort); do
    dir=$(dirname $dir)
    cd $dir

    STATE=""

    if [[ -n $(git ls-files --other --exclude-standard 2> /dev/null) ]]; then
        STATE="untracked-files ${STATE}"
    fi

    if ! git diff --quiet 2> /dev/null; then
        STATE="modified ${STATE}"
    fi

    if ! git diff --cached --quiet 2> /dev/null; then
        STATE="staged ${STATE}"
    fi

    if [[ -n $(git stash list) ]]; then
        STASHES=$(git stash list | wc -l | awk '{print $1}')
        if [ "${STASHES}" -eq 1 ] && git stash list | grep -qi 'Logging'; then
            STATE="stashed (Logging) ${STATE}"
        else
            STATE="stashed (${STASHES}) ${STATE}"
        fi
    fi

    if ! git fetch 2> /dev/null; then
        STATE="noremote ${STATE}"
    fi
    
    if [[ -n $(git br | grep 'ahead') ]]; then
        STATE="unpushed ${STATE}"
    fi
    if [[ -n $(git br | grep 'behind' | grep '*') ]]; then
        STATE="unpulled ${STATE}"
    fi

    if [[ "$STATE" == "unpulled " || "$STATE" == "stashed (Logging) " || "$STATE" == "unpulled stashed (Logging) " ]]; then
        echo "\033[1;33m${dir}: ${STATE}" # Yellow
    elif [[ -n $STATE ]]; then
        echo "\033[1;31m${dir}: ${STATE}" # Red
    else
        echo "\033[1;32mChecked ${dir}" # Green
    fi

    cd - > /dev/null
done

echo ""
echo "\033[1;37mScanning for flagged nogit directories..."
for dir in $(find . -name '.nogit' -type f | sort); do
    dir=$(dirname $dir)
    echo "\033[1;31m${dir}: Non-git"
done
