#################################################################
# Automatically perform some cool operations after changing dir #
#  - This chpwd function is only called by ZSH, not Bash.       #
#  - For Bash support, override the cd function.                #
#                                                               #
#  cd() {                                                       #
#      if [ -n "$1" ]; then                                     #
#          builtin cd "$@" && clear && ls -lah                  #
#          ...                                                  #
#      else                                                     #
#          builtin cd ~ && clear && ls -lah                     #
#      fi                                                       #
#  }                                                            #
#                                                               #
#################################################################
function chpwd() {
	emulate -L zsh
	ls -lAh
	echo ''
	
	if [ -e ".git" ]; then
		echo "$bg[red]$fg[white] Git status $reset_color"
		git status
		echo ''
	fi
	
	if [ -e "todo.txt" ]; then
		echo "$bg[red]$fg[white] TODO list $reset_color"
		cat todo.txt
		echo ''
	fi
}


#################################
# SetTitle for Terminal & Tmux  #
#################################
function settitle() {
	#echo -ne "\e]2;$@\a\e]1;$@\a";
	echo -ne "\033]0;$@\007";
}
function tmuxtitle() {
    printf "\033k$1\033\\"
}


#############################
# View man pages in Preview #
#############################
function pman() {
	ps=`mktemp -t manpageXXXX`.ps;
	man -t $@ > "$ps";
	open "$ps";
}


##################################
# View graph of commits per hour #
##################################
function commitgraph() {
  git log --pretty=format:'%an: %at' --author="Simon Frost" | awk '{system("date -r "$NF" '+%H'")}' | sort | uniq -c | ruby -e 'puts STDIN.readlines.inject(Hash[Array("00".."23").map{|x| [x,0]}]) {|h, x| h.merge(Hash[*x.split(" ").reverse])}.sort.map(&:last)' | spark
}


##################################
# Colourise man pages            #
##################################
# http://boredzo.org/blog/archives/2016-08-15/colorized-man-pages-understood-and-customized
man() {
    env \
        LESS_TERMCAP_mb=$(printf "\e[1;31m") \
        LESS_TERMCAP_md=$(printf "\e[1;31m") \
        LESS_TERMCAP_me=$(printf "\e[0m") \
        LESS_TERMCAP_se=$(printf "\e[0m") \
        LESS_TERMCAP_so=$(printf "\e[1;44;33m") \
        LESS_TERMCAP_ue=$(printf "\e[0m") \
        LESS_TERMCAP_us=$(printf "\e[1;32m") \
            man "$@"
}

